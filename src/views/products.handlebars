<div>
    <h1>Product List</h1>
</div>
<div>
    {{#if isAdmin}}

        <ul>
            {{#each products}}
            <hr>
            <li>{{title}}</li>
            <li>{{description}}</li>
            <li>{{code}}</li>
            <li>{{price}}</li>
            <li>{{stock}}</li>
            <li>{{category}}</li>
            <input type="submit" value="Agregar Al Carrito">
            {{/each}}
        </ul>
    {{else}}
    <div>No hay productos</div>
    {{/if}}
</div>